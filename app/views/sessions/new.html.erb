<% provide(:title, 'Sign In') %>
<div class="jumbotron text-center animated bounceIn" id="title" style="background:white;width:75%;display:block;margin:auto;">
  <h1>Sign In</h1>

  <%= form_for(:session, url: sessions_path) do |f| %>

    <%= f.label :email %>
    <%= f.text_field :email, autofocus: true %>

    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>

    <br>
    <%= f.submit 'Sign In' %>
  <% end %>
</div>